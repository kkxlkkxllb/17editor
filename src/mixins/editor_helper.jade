mixin fonts_list()
	- var fonts = ['Serif', 'Sans', 'Arial', 'Arial Black', 'Courier',  'Courier New', 'Comic Sans MS', 'Helvetica', 'Impact', 'Lucida Grande', 'Lucida Sans', 'Tahoma', 'Times', 'Times New Roman', 'Verdana']
	for f in fonts
		li
			a(data-edit="fontName " + f  style="font-family:" + f href="javascript:void(0)")= f

mixin fontSize_list()
	- var sizes = {"1":"Small", "3":"Normal", "5":"Huge"}
	for name,h in sizes
		li
			a(data-edit="fontSize " + h href="javascript:void(0)")
				font(size= h)
					= name
